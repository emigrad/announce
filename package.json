{
  "name": "@emigrad/announce",
  "version": "1.0.3",
  "main": "dist/announce.js",
  "files": [
    "dist"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "build": "rm -rf dist; tsc",
    "check": "run-p check:format check:lint check:tests",
    "check:format": "prettier --check \"src/**/*.{ts,json,md}\"",
    "check:lint": "eslint",
    "check:tests": "tsc -p tsconfig.tests.json",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "prepublishOnly": "run-p check test build",
    "test": "jest",
    "test:ci": "jest --ci --collectCoverage",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "dependencies": {
    "cuid": "^2.1.8",
    "promise-queue": "^2.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@tsconfig/node12": "^1.0.7",
    "@types/jest": "^26.0.23",
    "@types/promise-queue": "^2.2.0",
    "babel-jest": "^27.0.2",
    "eslint": "^7.27.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-junit": "^12.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "prettier-config-standard": "^4.0.0",
    "standard-version": "^9.3.0",
    "ts-deferred": "^1.0.4",
    "typescript": "^4.3.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "rootDir": "src"
  },
  "prettier": "prettier-config-standard"
}
